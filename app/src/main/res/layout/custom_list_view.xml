<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:padding="10dp"
    android:background="@drawable/border_circle"
    >
    <ImageView
        android:id="@+id/book_image_view"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/by_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/book_image_view"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:text="@string/author_name"
        />
    <TextView
        android:id="@+id/publisher_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/publisher"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/book_image_view"
        android:layout_below="@id/by_text_view"
        />
    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/book_image_view"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/author_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/by_text_view"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="3dp"
        />
    <TextView
        android:id="@+id/publisger_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/publisher_text_view"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="3dp"
        />
</RelativeLayout>